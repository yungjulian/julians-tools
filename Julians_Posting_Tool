    <script>
        function insertEmoji(emoji) {
            const inputField = document.getElementById('inputField');
            const cursorPosition = inputField.selectionStart;
            const textBefore = inputField.value.substring(0, cursorPosition);
            const textAfter = inputField.value.substring(cursorPosition);
            inputField.value = textBefore + emoji + ' ' + textAfter;  // Emoji mit Leerzeichen
            inputField.selectionStart = inputField.selectionEnd = cursorPosition + emoji.length + 1;  // Cursor nach Emoji + Leerzeichen
            inputField.focus();
        }

        document.getElementById('instagramBtn').addEventListener('click', function() {
            const inputText = document.getElementById('inputField').value;
            const instagramHashtags = "#rotweissessen #rwessen #rwe1907 #immeRWEiter #hafenstra√üe #nurderrwe";  // Hashtags ohne <p> Tags
            const formattedText = `${inputText}\n\n${instagramHashtags}`;  // Instagram Formatierung
            document.getElementById('outputField').value = formattedText;
        });

        document.getElementById('twitterBtn').addEventListener('click', function() {
            const inputText = document.getElementById('inputField').value;
            const twitterHashtags = "#immeRWEiter #nurderrwe";  // Hashtags ohne <p> Tags
            const formattedText = `${inputText}\n\n${twitterHashtags}`;  // Twitter Formatierung
            document.getElementById('outputField').value = formattedText;
        });

        document.getElementById('copyBtn').addEventListener('click', function() {
            const outputText = document.getElementById('outputField').value;
            navigator.clipboard.writeText(outputText).then(function() {
                // Zeige die Toast-Notification
                const toast = document.getElementById('toast');
                toast.className = "toast show";
                setTimeout(function() {
                    toast.className = toast.className.replace("show", "");
                }, 2000);
            }).catch(function(err) {
                console.error('Fehler beim Kopieren: ', err);
            });
        });

        function toggleDarkMode() {
            const body = document.body;
            const darkModeButton = document.getElementById('darkModeToggle');
            
            // Wechselt die Klasse f√ºr den Darkmode
            body.classList.toggle('dark-mode');
            
            // √Ñndert den Button Text je nach Zustand
            if (body.classList.contains('dark-mode')) {
                darkModeButton.innerHTML = 'üåû'; // Sonne f√ºr den R√ºckwechsel
            } else {
                darkModeButton.innerHTML = 'üåô'; // Mond f√ºr den Darkmode
            }
        }
    </script>
